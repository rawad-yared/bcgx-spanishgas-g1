# AWS Credentials / Region
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3
S3_BUCKET=spanishgas-data-g1
S3_PREFIX_RAW=raw/
S3_PREFIX_BRONZE=bronze/
S3_PREFIX_SILVER=silver/
S3_PREFIX_GOLD=gold/
S3_PREFIX_MODELS=models/
S3_PREFIX_SCORED=scored/

# DynamoDB
DYNAMODB_MANIFEST_TABLE=spanishgas-pipeline-manifest

# SageMaker
SAGEMAKER_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerExecutionRole
SAGEMAKER_MODEL_PACKAGE_GROUP=spanishgas-churn
SAGEMAKER_PROCESSING_INSTANCE=ml.m5.xlarge
SAGEMAKER_TRAINING_INSTANCE=ml.m5.xlarge

# Step Functions
STEP_FUNCTIONS_ARN=arn:aws:states:eu-west-1:123456789012:stateMachine:spanishgas-pipeline

# SNS Alerts
SNS_TOPIC_ARN=arn:aws:sns:eu-west-1:123456789012:spanishgas-alerts

# CloudWatch
CLOUDWATCH_NAMESPACE=SpanishGas/MLOps

# Model Promotion
PROMOTION_PR_AUC_THRESHOLD=0.70

# Local dev
DATA_DIR=data
LOG_LEVEL=INFO
